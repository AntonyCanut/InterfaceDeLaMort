extend layout

block content
  p
    | Voici la page de contact
    
  p(class="#{IsHidden}")
    | Merci #{FirstName} #{Name}, votre message à bien été transmis !
    
  form(method="post", action="/contact")
    p Nom : 
      input(type="text", name="name").text
    p Prenom : 
      input(type="text", name="firstName").text
    p Mail : 
      input(type="text", name="mail").text
    p Message
      input(type="text", name="message").text
        
    button(type="submit").btn.success Envoyer
